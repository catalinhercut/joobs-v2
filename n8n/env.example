# ===========================================
# n8n Environment Configuration
# ===========================================
# Copy this file to .env and customize the values

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_NON_ROOT_USER=n8n
POSTGRES_NON_ROOT_PASSWORD=change_this_secure_password

# ===========================================
# n8n Configuration
# ===========================================
# Domain/Host configuration
N8N_HOST=n8n.yourdomain.com
N8N_PROTOCOL=https
N8N_PORT=5678
WEBHOOK_URL=https://n8n.yourdomain.com

# Authentication (set to false to disable basic auth)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_this_admin_password

# ===========================================
# General Settings
# ===========================================
TIMEZONE=UTC
N8N_LOG_LEVEL=info
N8N_METRICS=false

# Editor URL (optional, for custom editor)
N8N_EDITOR_BASE_URL=

# ===========================================
# Production Settings
# ===========================================
# For production, consider:
# - Using strong passwords
# - Setting up proper SSL certificates
# - Using external PostgreSQL database
# - Setting up backup strategies
# - Configuring monitoring and alerts

# Example production values:
# N8N_HOST=n8n.mycompany.com
# N8N_PROTOCOL=https
# WEBHOOK_URL=https://n8n.mycompany.com
# POSTGRES_PASSWORD=very_secure_random_password_here
# N8N_BASIC_AUTH_PASSWORD=another_secure_password_here
